<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>
    <style name="DescriptionStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="SettingsStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/teal_700</item>
        <item name="trackTint">@color/teal_700</item>
        <item name="track">@drawable/switch_track</item>
        <item name="trackDecorationTint">@color/switch_track_colors</item>
    </style>
    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurfaceVariant">@color/black</item>
    </style>
</resources>